<Page x:Class="IYaManifestDemo.Pages.Assets.CommonDisplayerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IYaManifestDemo.Pages.Assets"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      d:DataContext="{d:DesignInstance Type={x:Type local:CommonDisplayerPageViewModel}}"
      Title="CommonDisplayerPage">

    <ScrollViewer>
        <StackPanel Margin="4">
            <Label Content="{Binding ShowingText}"></Label>
        </StackPanel>
    </ScrollViewer>
</Page>
